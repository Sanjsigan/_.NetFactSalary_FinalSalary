@page
@model Salary.Pages.signupModel
@{
}

<form method="post">
    <table class="table">
        <tr>
            <td>UserName</td>
            <td><input asp-for="@Model.account.Username" /></td>
        </tr>
        <tr>
            <td>Password</td>
            <td><input type="password" asp-for="@Model.account.Password" /></td>
        </tr>
        <tr>
            <td>Full Name</td>
            <td><input asp-for="@Model.account.FullName" /></td>
        </tr>
        <tr>
            <td>Email</td>
            <td><input asp-for="@Model.account.Email" /></td>
        </tr>
        <tr>
            <td><input class="btn btn-success" type="submit" value="Sign Up" /></td>
            <td><a class="btn btn-success" asp-page="SignIn">Sign in</a></td>
        </tr>


    </table>

</form>