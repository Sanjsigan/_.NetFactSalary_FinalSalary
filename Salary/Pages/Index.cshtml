</form>
    <script>
        function calculateAmount(val) {
            var price = val * 1;
            var tax = val * 5 / 100;
            var medical = val * 5 / 100;
            var travel = val * 5 / 100;



            var minus = (tax + medical + travel)
            var tot_price = price - minus;
            var divobj = document.getElementById('tot_amount');
            var divmin = document.getElementById('tot_minus');
            var divfood = document.getElementById('food_tax');
            var divmedical = document.getElementById('medical_tax');
            var divtravel = document.getElementById('travel_tax');

            divobj.value = tot_price;
            divmin.value = minus;

            divmedical.value = medical;
            divfood.value = tax;
            divtravel.value = travel;



            if (price >= 1000 && price <= 2000) {
                var extra = price * 5 / 100;
                var minus = (tax + medical + travel + extra)
                var tot_price = price - minus;

                var divobj = document.getElementById('tot_amount');
                var divmin = document.getElementById('tot_minus');
                var divfirst = document.getElementById('first_tax');


                divobj.value = tot_price;
                divmin.value = minus;
                divfirst.value = extra

            }
            else if(price >= 2001 && price <= 3000) {
                var extra = price * 10 / 100;
                var minus = (tax + medical + travel + extra)
                var tot_price = price - minus;

                var divobj = document.getElementById('tot_amount');
                var divmin = document.getElementById('tot_minus');
                var divsecond = document.getElementById('second_tax');

                divobj.value = tot_price;
                divmin.value = minus;
                divsecond.value = extra
            }
        }

    </script>
